
<%= form_for @comment ,url: comments_remark_path(@album.id), method: :post do |f| %>	
	<div class="col-md-12">
		<h3 style="text-align: center;"><%= @album.album_name %></h3>
		<hr>
	</div>
	<div class="col-md-8 color-ffeecc">
		
		<% @albums.each do |item|%>
			<div class="col-md-3">
				<%= image_tag "/uploads/#{item.image_name}", height: "180px", width: "180px", class: 'img-rounded' %>	
			</div>
		<% end %>		
	</div>

	<div class="col-md-4 color-c2d6d6">
		<div class="col-md-1">
			<%= image_tag "/uploads/#{@friend.avater}", height: "50px", width: "50px" %>
		</div>
		<div class="col-md-8">
			<p><%= @friend.firstname	%></p>
		</div>
		<div class="col-md-3">
		</div>
		<div class="col-md-12">
			<hr><hr>
		</div>

		<div class="col-md-12">
			<%= f.label :comments %>
		</div>
		<div class="col-md-12">
  		<%= f.text_field :comment_name, required: true %>
		</div>
		<div class="col-md-12">
			<%= f.submit "Create New Comment" %>
		</div>		
	</div>
<% end %>