<%= form_for @album do |f| %>

   
  <div class="main-center">
    <div class="form-group">
      <%= f.label :Album_name, id: "", class: "cols-sm-2 control-label" %>
      <div class="cols-sm-10">  
        <%= f.text_field :album_name, :required => true, class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :pictures, class: "cols-sm-2 control-label" %>
      <div class="cols-sm-10">  
        <%= f.file_field :image_name, :multiple => true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit "Save changes" ,class:"cols-sm-2 control-label" %>
    </div>
  </div>
<% end %>